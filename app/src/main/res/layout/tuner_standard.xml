<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/guitar_neck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Standard Tuning"
        android:textColor="@color/colorAccent"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/e_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3"
        android:text="E"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/a_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/e_note"
        android:layout_alignRight="@+id/e_note"
        android:layout_below="@+id/e_note"
        android:layout_marginTop="33dp"
        android:text="A"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/d_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/e_note"
        android:layout_alignStart="@+id/e_note"
        android:layout_below="@+id/a_note"
        android:layout_marginTop="29dp"
        android:text="D"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/g_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/e_note"
        android:layout_alignBottom="@+id/e_note"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="G"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/b_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/d_note"
        android:layout_alignLeft="@+id/g_note"
        android:layout_alignStart="@+id/g_note"
        android:text="B"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/high_e_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/d_note"
        android:layout_alignBottom="@+id/d_note"
        android:layout_alignEnd="@+id/b_note"
        android:layout_alignRight="@+id/b_note"
        android:text="E"
        android:textSize="25sp" />

    <Button
        android:id="@+id/play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Play All"
        android:textColor="@color/colorAccent" />

</RelativeLayout>