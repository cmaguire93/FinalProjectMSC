<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guitar_neck"
        android:id="@+id/imageView3"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open G Tuning"
        android:textSize="25dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/low_d_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="D"
        android:textSize="25sp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3" />

    <TextView
        android:id="@+id/low_g_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="G"
        android:textSize="25sp"
        android:layout_below="@+id/low_d_note"
        android:layout_alignRight="@+id/low_d_note"
        android:layout_alignEnd="@+id/low_d_note" />

    <TextView
        android:id="@+id/d_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="D"
        android:textSize="25sp"
        android:layout_below="@+id/low_g_note"
        android:layout_alignLeft="@+id/low_d_note"
        android:layout_alignStart="@+id/low_d_note" />

    <TextView
        android:id="@+id/g_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/low_d_note"
        android:layout_alignBottom="@+id/low_d_note"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/b_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="25sp"
        android:layout_above="@+id/d_note"
        android:layout_alignLeft="@+id/g_note"
        android:layout_alignStart="@+id/g_note" />

    <TextView
        android:id="@+id/high_d_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/d_note"
        android:layout_alignBottom="@+id/d_note"
        android:layout_alignRight="@+id/b_note"
        android:layout_alignEnd="@+id/b_note" />

    <Button
        android:id="@+id/play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play All"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>